{
  "name": "typescript-fsa-redux-thunk",
  "version": "2.0.0-beta.8",
  "description": "TypeScript FSA utilities for redux-thunk",
  "keywords": [
    "redux",
    "thunk",
    "redux-thunk",
    "typescript",
    "typescript-fsa",
    "action",
    "action creator",
    "flux standard action"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "repository": "xdave/typescript-fsa-redux-thunk",
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project tsconfig.json -c tslint.json",
    "test": "cross-env TS_NODE_PROJECT=tsconfig.tests.json nyc mocha",
    "test:watch": "npm -s t -- --reporter min --watch src/**/*.ts --watch-extensions ts",
    "posttest": "test $CI && codecov -f coverage/*.json || true",
    "build:lib": "tsc",
    "build": "npm -s run build:lib"
  },
  "author": "Dave Gradwell <deft.productions@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xdave/typescript-fsa-redux-thunk/issues"
  },
  "homepage": "https://github.com/xdave/typescript-fsa-redux-thunk#readme",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/node": "^9.6.5",
    "@types/redux-mock-store": "^0.0.13",
    "chai": "^4.1.2",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.4",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "^5.1.0",
    "nyc": "^11.6.0",
    "redux": "^3.x",
    "redux-mock-store": "^1.5.1",
    "redux-thunk": "^2.x",
    "rimraf": "^2.6.2",
    "ts-node": "^5.0.1",
    "tslib": "^1.9.0",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1",
    "typescript-fsa-reducers": "^0.4.5"
  },
  "dependencies": {
    "typescript-fsa": "^3.0.0-beta-1"
  },
  "peerDependencies": {
    "redux": "^3.x",
    "redux-thunk": "^2.x"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
	  "src/**/*.spec.ts",
	  "src/examples.ts",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "json"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
