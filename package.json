{
  "name": "typescript-fsa-redux-thunk",
  "version": "2.0.0-beta.2",
  "description": "TypeScript FSA utilities for redux-thunk",
  "keywords": [
    "redux",
    "redux-thunk",
    "typescript",
    "action",
    "action creator",
    "flux standard action"
  ],
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "repository": "xdave/typescript-fsa-redux-thunk",
  "scripts": {
    "clean": "rimraf lib es",
    "lint": "tslint --type-check --project tsconfig.json -c tslint.json",
    "test": "cross-env TS_NODE_PROJECT=tsconfig.tests.json nyc mocha",
    "test:watch": "npm -s t -- --reporter min --watch src/**/*.ts --watch-extensions ts",
    "posttest": "nyc report --reporter=json && codecov -f coverage/*.json",
    "build:lib": "tsc",
    "build": "npm -s run build:lib"
  },
  "author": "Dave Gradwell <deft.productions@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xdave/typescript-fsa-redux-thunk/issues"
  },
  "homepage": "https://github.com/xdave/typescript-fsa-redux-thunk#readme",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "@types/node": "^8.0.31",
    "@types/redux-mock-store": "^0.0.11",
    "chai": "^4.1.2",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "mocha": "^4.0.0",
    "nyc": "^11.2.1",
    "redux": "^3.7.2",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.2",
    "ts-node": "^3.3.0",
    "tslib": "^1.7.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.3"
  },
  "dependencies": {
    "typescript-fsa": "^2.5.0"
  },
  "peerDependencies": {
    "redux": "^3.x",
    "redux-thunk": "^2.x"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "json"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
